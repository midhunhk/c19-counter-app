<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.C19App" parent="Base.Theme.C19App" />

    <style name="Base.Theme.C19App" parent="Base.Theme.MaterialTheme">
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>

        <!--text fields.-->
        <item name="android:colorBackground">@color/off_white</item>
        <item name="colorSurface">@color/off_white</item>
        <item name="colorError">@color/red_error</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:colorForeground" tools:ignore="PrivateResource">@color/foreground_material_dark</item>
    </style>

    <style name="Base.Theme.MaterialTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorSecondaryVariant</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/blue_dark</item>
    </style>

</resources>